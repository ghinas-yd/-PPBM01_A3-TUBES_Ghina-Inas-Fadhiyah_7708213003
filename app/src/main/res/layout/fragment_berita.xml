<!-- Isi sesuai dengan kebutuhan -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".berita">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berita Terkini"
        android:textSize="23sp"
        android:textStyle="bold"
        android:fontFamily="@font/league"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imageViewContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/berita1"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewContent"
        android:textSize="25dp"
        style="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="10 Cara Belajar Desain Grafis Secara Otodidak"/>
    <!-- Tambahkan elemen UI sesuai kebutuhan -->

</RelativeLayout>
